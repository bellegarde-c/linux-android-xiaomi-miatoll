config POWER_SAVER_SCREEN_OFF_LLCC_DDR_BW
    int "Screen off frequency for cpu-llcc-ddr-bw device"
    default 0
    help
	"Screen off LLCC DDR bandwith"

config POWER_SAVER_SCREEN_OFF_DDR_LATFLOOR
    int "Screen off frequency for cpu-ddr-latfloor device"
    default 0
    help
	"Screen off DDR latency"

